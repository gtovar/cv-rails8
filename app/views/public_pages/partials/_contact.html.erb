<section id="contact" class="contact section-padding">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h6 class="heading-subtitle">Ponte en contacto</h6>
        <h2 class="heading-title">Contáctame</h2>
      </div>
    </div>

    <div class="row">
      <!-- Información de contacto -->
      <div class="col-md-6 mb-4">
        <h5>Construyamos el futuro juntos</h5>
        <p>Estoy disponible para colaboraciones o comisiones.
        <br>Me emociona saber de tus ideas o proyectos.
        </p>
        <ul class="list-unstyled contact-list">
          <li>
            <div class="icon"><span class="ti-headphone-alt"></span></div>
            <div class="text">
              <p><a href="tel:+526551234567">+52 655 123 4567</a></p>
            </div>
          </li>
          <li>
            <div class="icon"><span class="ti-email"></span></div>
            <div class="text">
              <p><a href="mailto:gil.tovar.dev@gmail.com">gil.tovar.dev@gmail.com</a></p>
            </div>
          </li>
          <li>
            <div class="icon"><span class="ti-skype"></span></div>
            <div class="text">
              <p>@gildev</p>
            </div>
          </li>
          <li>
            <div class="icon"><span class="ti-location-pin"></span></div>
            <div class="text">
              <p>Monterrey, Nuevo León, México</p>
            </div>
          </li>
        </ul>
      </div>

      <!-- Formulario de contacto -->
      <div class="col-md-6">
        <h5>Escríbeme</h5>

        <%= form_with url: contact_messages_path, method: :post, remote: true, html: { class: "contact__form" } do |f| %>
          <div class="row">
            <div class="col-12">
              <% if flash[:notice] %>
                <div class="alert alert-success contact__msg">
                  <%= flash[:notice] %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 form-group">
              <%= f.text_field :name, placeholder: "Nombre *", required: true, class: "form-control" %>
            </div>
            <div class="col-md-6 form-group">
              <%= f.email_field :email, placeholder: "Correo electrónico *", required: true, class: "form-control" %>
            </div>
            <div class="col-md-6 form-group">
              <%= f.text_field :phone, placeholder: "Teléfono *", required: true, class: "form-control" %>
            </div>
            <div class="col-md-6 form-group">
              <%= f.text_field :subject, placeholder: "Asunto *", required: true, class: "form-control" %>
            </div>
            <div class="col-md-12 form-group">
              <%= f.text_area :message, placeholder: "Mensaje *", required: true, class: "form-control", rows: 4 %>
            </div>
            <div class="col-md-12">
              <%= f.submit "Enviar mensaje", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>

        <p class="mt-30"><small><i>* Tu información está segura conmigo.</i></small></p>
      </div>
    </div>
  </div>
</section>

