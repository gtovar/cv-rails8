<%= form_with(model: [@resume, @education], local: true) do |form| %>
  <% if @education.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@education.errors.count, "error") %> impidieron guardar:</h2>
      <ul>
        <% @education.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :institution %>
    <%= form.text_field :institution, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :degree %>
    <%= form.text_field :degree, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <%= form.submit %>
<% end %>

