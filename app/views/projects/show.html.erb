  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="d-sm-flex align-items-center justify-content-between">
          <div class="work-prev-next-left">
            <% if @previous_project %>
              <%= link_to("<i class='ti-arrow-left'></i> Proyecto anterior".html_safe, resume_project_path(resume_id: @resume.id, id: @previous_project.slug)) %>
            <% end %>
          </div>

          <%= link_to raw("<i class='ti-layout-grid3-alt'></i>"), public_resume_path %>

          <div class="work-prev-next-right">
            <% if @next_project %>
              <%= link_to("PrÃ³ximo proyecto <i class='ti-arrow-right'></i>".html_safe, resume_project_path(resume_id: @resume.id, id: @next_project.slug)) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
